<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pickme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ii"
        android:label="@string/app_name"
         >
        <activity
            android:name="com.example.pickme.Main"
            android:label="@string/app_name"
            android:theme="@style/BackGTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pickme.ResturantsList"
            android:label="@string/title_activity_resturants"
             >
            <intent-filter>
                <action android:name="com.example.pickme.ResturantsList" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pickme.KFC"
            android:label="@string/title_activity_kfc" 
            >
            <intent-filter>
                <action android:name="com.example.pickme.KFC" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.example.pickme.Resturants"
            android:label="@string/title_activity_resturants" 
           >
            <intent-filter>
                <action android:name="com.example.pickme.Resturants" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pickme.SubActivity"
            android:label="@string/title_activity_sub"
             >
        </activity>
        <activity
            android:name="com.example.pickme.SearchActivity"
            android:label="@string/title_activity_search"
             >
            
            <intent-filter>
       			 <action android:name="android.intent.action.SEARCH" />
    		</intent-filter>
    
            
        </activity>
    </application>

</manifest>
